<h1>My Todo List</h1>
<div class="indent">
	<div class="item"><%=link_to("Add New", :action => 'new')%></div>
	<div class="pad15"></div>
	
	<ul id="todo_list" style="cursor: move">
	  <% @todos.each do |f| %>
	    <li id="item_<%= f.id %>">
	      <%= f.name %>
	    </li>
	  <% end %>
	</ul>
	</div><!-- todo_list -->
	
</div><!--indent -->
<%= sortable_element "todo_list",
:url => {:action => "sort", :id => @user},
:complete => visual_effect(:highlight, "todo_list")
%>